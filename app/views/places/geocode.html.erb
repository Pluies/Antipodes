<h1><%=t :place_confirmation %></h1>

<%= render "shared/map" %>

<%= form_tag '/antipodes', :method => 'get' do %>
  <%= hidden_field_tag(:lat, @lat) %>
  <%= hidden_field_tag(:lng, @lng) %>
  <%= submit_tag( t(:yes_button), :name=>nil) %>
<% end %>
<br />
<%= form_tag '/', :method => 'get' do %>
  <%= submit_tag t(:no_button), :name=>nil %>
<% end %>

